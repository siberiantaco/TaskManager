@model IEnumerable<TaskManager.Models.Task>

    @foreach (TaskManager.Models.Task t in Model)
    {
        <li id="@t.Id">
           
            <div style="display:table-row">
                @Ajax.ActionLink(@t.Name, "SubTasks", new { id = @t.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "child_" + @t.Id.ToString() })
                @Ajax.ActionLink(" ", "Details", new { id = @t.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "page-content-wrapper" }, new { @class = "glyphicon glyphicon-chevron-right" })
            </div>
            <ul id="child_@t.Id"></ul>
        </li>
    }

